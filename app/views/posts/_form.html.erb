<div class="form">
  <% if @post.errors.any? %>
    <div class="alert alert-danger" role="alert">
        <% @post.errors.full_messages.each do |msg| %>
        <%= msg %><br>
        <% end %>
    </div>
  <% end %>

  <%= simple_form_for @post do |f|%>
    <%= f.input :title%>
    <%= f.input :category%>
    <%= f.input :date%>
    <%= f.cktext_area :content%>
    <%= f.button :submit%>
  <%end%>
</div>
