
<div class="form">
  <% if @book.errors.any? %>
    <div class="alert alert-danger" role="alert">
        <% @book.errors.full_messages.each do |msg| %>
        <%= msg %><br>
        <% end %>
    </div>
  <% end %>
<div class="form_box">
  <%= simple_form_for @book do |f|%>
    <%= f.input :title%>
    <%= f.input :fullTitle%>
    <%= f.input :subtitle%>
    <%= f.input :shortTitle%>
    <%= f.input :year%>
    <%= f.input :contributors%>
    <%= f.input :publisher%>
    <%= f.input :language%>
    <%= f.input :pages%>
    <%= f.input :description%>
    <%= f.input :amazonLink%>
    <%= f.input :height%>
    <%= f.input :width%>
    <%= f.input :contributed, as: :boolean%>
    <%= f.button :submit%>
  <%end%>
</div>


</div>
